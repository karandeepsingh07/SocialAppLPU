<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartingActivity">

    <ImageView
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:src="@drawable/circletransperent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/circle1"
        />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-90dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/circle" />


    <ImageView
        android:id="@+id/circle3"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-60dp"
        android:layout_toLeftOf="@id/circle2"
        android:src="@drawable/circletransperent" />


    <ImageView
        android:id="@+id/circle5"
        android:layout_width="132dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/circle"
        android:layout_marginTop="-46dp"
        android:layout_marginLeft="-40dp"/>

    <Button
        android:id="@+id/buttonUserLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bt_uisquare"
        android:text="Login As Student"
        android:layout_above="@id/buttonOrgLogin"
        android:textAllCaps="false"
        android:layout_margin="35dp"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/buttonOrgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bt_uisquare"
        android:text="Login As Organisation"
        android:textAllCaps="false"
        android:layout_margin="35dp"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/buttonFacultyLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="35dp"
        android:background="@drawable/bt_uisquare"
        android:text="Login As Faculty"
        android:textAllCaps="false"
        android:layout_below="@id/buttonOrgLogin"
        android:textColor="@color/colorWhite" />

</RelativeLayout>