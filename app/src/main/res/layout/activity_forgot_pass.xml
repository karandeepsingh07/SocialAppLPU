<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset PassWord"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlue"
        android:textSize="30sp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        ></TextView>
    <ImageView
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:src="@drawable/circletransperent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/circle1"
        ></ImageView>

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-90dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/circle" />


    <ImageView
        android:id="@+id/circle3"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-60dp"
        android:layout_toLeftOf="@id/circle2"
        android:src="@drawable/circletransperent" />


    <ImageView
        android:id="@+id/circle5"
        android:layout_width="132dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/circle"
        android:layout_marginTop="-46dp"
        android:layout_marginLeft="-40dp"/>

    <ScrollView
        android:id="@+id/fpsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/fpcv">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fptvEmailL"
                        android:layout_margin="15dp"
                        android:text="Email"
                        android:textColor="@color/colorPurple"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        ></TextView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fpeditemail"
                        android:layout_below="@+id/fptvEmailL"
                        android:textColor="@color/colorPurple"
                        android:drawableRight="@drawable/ic_person"
                        android:inputType="text"
                        android:padding="10dp"
                        android:layout_margin="15dp"
                        />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/fprlp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/fpcv"
                android:layout_alignRight="@+id/fpcv"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="-20dp"
                android:elevation="10dp"
                >
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fprl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fpcv"
                android:layout_alignRight="@+id/fpcv"
                android:layout_alignBottom="@+id/fpcv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="-20dp"
                android:elevation="10dp">
                <Button
                    android:id="@+id/btForgotPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_uisquare"
                    android:text="Reset password"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>