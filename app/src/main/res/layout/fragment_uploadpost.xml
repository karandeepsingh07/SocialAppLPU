<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postTitle"
            android:hint="Enter Title"
            android:padding="10dp"
            android:singleLine="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postImage"
            android:background="@color/colorPurple"
            android:minHeight="200dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postDescription"
            android:hint="Enter Desciption"
            android:padding="10dp"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:gravity="start"
            android:layout_marginTop="7dp" />

        <Spinner
            android:id="@+id/postCategory"
            android:layout_width="match_parent"
            android:entries="@array/category"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FormLink"
            android:hint="Enter Form link"
            android:padding="10dp"
            android:singleLine="true"
            android:autoLink="all"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postDL"
            android:hint="Dls Available? (yes/No)"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postStartDate"
            android:hint="Enter Start Date"
            android:inputType="date"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postEndDate"
            android:hint="Enter End Date"
            android:inputType="date"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postFee"
            android:hint="Enter Fees"
            android:padding="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postContact"
            android:hint="Enter Contact"
            android:padding="10dp"
            android:inputType="textAutoComplete"
            android:layout_marginTop="7dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadButton"
            android:background="@drawable/bt_uisquare"
            android:text="Upload"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>