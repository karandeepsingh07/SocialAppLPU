<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrganisationDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/grad_bg"
            android:layout_height="250dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewOrganisation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:civ_circle_background_color="@android:color/white"
                android:src="@drawable/ic_person"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Name"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/nameImageView"
                android:src="@drawable/ic_name"
                style="@style/profileDetailsImage" />
            <EditText
                android:id="@+id/editTextOrgTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:onClick="editLayout"
                android:layout_margin="10dp"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="About"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/AboutImageView"
                android:src="@drawable/abtus"
                android:layout_marginLeft="5dp"
                style="@style/profileDetailsImage" />
            <EditText
                android:id="@+id/editTextAboutOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:onClick="editLayout"
                android:clickable="true"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="CEO"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCEO"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person"/>

            <EditText
                android:id="@+id/editTextCeoOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:onClick="editLayout"
                android:clickable="true"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Co CEO"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCoCEO"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person"/>

            <EditText
                android:id="@+id/editTextCoCeoOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:clickable="true"
                android:onClick="editLayout"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Cultural Secretary"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCulSec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person"/>

            <EditText
                android:id="@+id/editTextCulSecOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:onClick="editLayout"
                android:focusable="false"
                android:clickable="true"
                android:drawableRight="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Tier"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_mobile"
                android:layout_marginStart="5dp"
                style="@style/profileDetailsImage" />
            <EditText
                android:id="@+id/editTextTierOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:onClick="editLayout"
                android:clickable="true"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Domain"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_department"
                android:layout_marginStart="5dp"
                style="@style/profileDetailsImage" />
            <EditText
                android:id="@+id/editTextDomainOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:onClick="editLayout"
                android:clickable="true"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Contact"
            android:textColor="@color/colorPurple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_email"
                android:layout_marginStart="5dp"
                style="@style/profileDetailsImage" />
            <EditText
                android:id="@+id/editTextContactOrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:focusable="false"
                android:onClick="editLayout"
                android:clickable="true"
                android:drawableEnd="@drawable/pencil_icon"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSubmitDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Details"
            android:background="@drawable/bt_uisquare"
            android:layout_margin="20dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>